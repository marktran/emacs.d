;; https://www.emacswiki.org/emacs/EshellPrompt#toc5
(defun fish-path (path max-len)
  "Return a potentially trimmed-down version of the directory PATH, replacing
parent directories with their initial characters to try to get the character
length of PATH (sans directory slashes) down to MAX-LEN."
  (let* ((components (split-string (abbreviate-file-name path) "/"))
         (len (+ (1- (length components))
                 (apply '+ (mapcar #'length components))))  ;; Compute total length manually
         (str ""))
    (while (and (> len max-len)
                (cdr components))
      (setq str (concat str
                        (cond ((= 0 (length (car components))) "/")
                              ((= 1 (length (car components)))
                               (concat (car components) "/"))
                              (t
                               (if (string= "."
                                            (string (elt (car components) 0)))
                                   (concat (substring (car components) 0 2)
                                           "/")
                                 (string (elt (car components) 0) ?/)))))
            len (- len (1+ (length (car components))))  ;; Adjust length manually
            components (cdr components)))
    ;; Concatenate remaining components manually
    (dolist (comp components)
      (setq str (concat str "/" comp)))
    str))
